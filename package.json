{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "~5.11.9",
    "@testing-library/react": "~11.2.5",
    "@testing-library/user-event": "~12.6.3",
    "@types/d3-array": "~2.9.0",
    "@types/d3-scale": "^3.2.x",
    "@types/d3-scale-chromatic": "^2.0.0",
    "@types/d3-time-format": "^2.1.1",
    "@types/jest": "~26.0.20",
    "@types/node": "~12.19.16",
    "@types/react": "~17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "~5.1.7",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.2.1",
    "d3-scale-chromatic": "^2.0.0",
    "eslint": "^7.26.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.5.0",
    "eslint-watch": "^7.0.0",
    "font-awesome": "^4.7.0",
    "jest": "^26.6.3",
    "npm-watch": "^0.11.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^3.8.3",
    "react-router-dom": "^5.2.0",
    "react-virtualized-auto-sizer": "~1.0.4",
    "react-window": "^1.8.5",
    "recharts": "^2.0.8",
    "sass": "^1.32.12",
    "ts-jest": "^26.5.6",
    "typescript": "~4.4.2",
    "vite": "^2.3.4",
    "weak-napi": "^2.0.2"
  },
  "watch": {
     "tests:backend": {
        "patterns": ["backend"],
        "extensions": "py",
        "runOnChangeOnly": false
     }
  },
  "scripts": {
    "start": "concurrently --kill-others-on-fail -c='white,green,blue,red,cyan,cyan' -n 'pyth,vite,tsc ,lint,test,btes' '$npm_execpath run watch-back' '$npm_execpath run watch-vite' '$npm_execpath run watch-tsc' '$npm_execpath run watch-lint' '$npm_execpath run watch-test' '$npm_execpath run watch-test-backend'",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "manage": "./env/bin/python3 ./backend/manage.py",
    "tests:backend": "$npm_execpath run manage test --parallel --verbosity=0 --buffer alere",

    "watch-back": "$npm_execpath run manage migrate; $npm_execpath run manage runserver 8000",
    "watch-vite": "VITE_API_URL=127.0.0.1:8000 vite --clearScreen false",
    "watch-tsc": "tsc -w --preserveWatchOutput",
    "watch-lint": "esw -w --changed --ext .ts,.tsx frontend/src",
    "watch-test": "jest --coverage --watch",
    "watch-test-backend": "npm-watch tests:backend"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
